<%- include ./partials/navBar%>
<script>
    function confirmUSDeletePopup() {
        if (confirm("Êtes-vous sûr de vouloir supprimer cette User Story ?")) {
            window.location="/project/<%= projectId %>/deleteUserStory/<%= userStoryId %>";
        }
    }
</script>

<div class="row mt-5">
    <div class="col-md-6 m-auto">

        <div class="card card-body">
            <form action="/project/<%= projectId %>/editUserStory" method="POST">
                <input type="hidden" name="userStoryId" value="<%= userStoryId %>">
                <input type="text" value="<%= userStory.description %>" id="description" name="description" style="width:100%" />
                <button type="submit" class="btn btn-dark">Modifier la description</button>
            </form>
        </div>
    
        <div class="card card-body">
            <form action="/project/<%= projectId %>/editUserStory" method="POST">
                <input type="hidden" name="userStoryId" value="<%= userStoryId %>">
                <input type="number" id="difficulty" name="difficulty" class="form-control"
                min="1" max="10" value="<%= userStory.difficulty %>" style="width:100%" />
                <button type="submit" class="btn btn-dark">Modifier la difficulté</button>
            </form>
        </div>
        <div class="card card-body">
            <form action="/project/<%= projectId %>/editUserStory" method="POST">
                <input type="hidden" name="userStoryId" value="<%= userStoryId %>">
                <input type="number" id="priority" name="priority" class="form-control"
                value="<%= userStory.priority %>" style="width:100%" />
                <button type="submit" class="btn btn-dark">Modifier la priorité</button>
            </form>
        </div>
        <br>
        <button class="btn btn-dark" onclick="confirmUSDeletePopup()" width="10%">Supprimer l'User Story</button>
    </div>
</div>