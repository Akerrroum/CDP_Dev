<%- include ./partials/navBar%>

<% if(typeof projects == 'undefined' || projects.length == 0) { %>
<div class="card-header">Projets</div>
<div class="card-body">
    <h4 class="card-title">Voulez vous créer un projet</h4>
    <form action="/createProject" method="GET">
        <button type="submit" class="btn btn-outline-primary">Créer Projet</button>
    </form>
</div>
<%} else {%>
<%- include ./partials/message%>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Nom du projet</th>
            <th scope="col">Description</th>
            <th scope="col">Collaborateurs</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <div class="jumbotron">
        <h3>Vous avez <%= projects.length %> projets </h3>
        <tbody>
            <% projects.forEach(function (project) { %>
            <tr class="table-light">
                <td><%= project.name %></td>
                <td><%= project.description  %></td>
                <td>
                    <ul>
                        <% project.users.forEach(function (user) { %>
                        <li><%= user.email %></li>
                        <% });%>
                    </ul>

                </td>
                <td>
                    <a href="/project/<%= project.id %>"><i class="fas fa-edit fa-lg"></i></a>
                    <a href="/project/<%= project.id %>/delete"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                    <a href="/project/<%= project.id %>/addUser"><i id="<%= project.id %>" name="<%= project.id %>"
                            class="fas fa-user-plus fa-lg"></i></a>
                </td>
            </tr>
            <% });%>
        </tbody>
        <tfoot>
            <form action="/createProject" method="GET">
                <button type="submit" class="btn btn-secondary">Créer projet</button>
            </form>
        </tfoot>
</table>
<%}%>
</div>