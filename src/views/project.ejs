<%- include ./partials/navBar%>
<script>
    function confirmDeletePopup() {
        if (confirm("Êtes-vous sûr de vouloir supprimer ce projet ?")) {
            window.location = "/project/<%= project._id %>/delete";
        }
    }
</script>
<div class="row mt-5">
    <div class="col-sm-10 m-auto">
        <% include ./partials/message%>

        <div class="card border-light mb-3" style="max-width: 75rem;">
            <div class="card-header">Modifier le projet
                <small><a href="/project/<%= project.id %>/modifyProject"><i class="fas fa-edit fa-lg"></i></a></small>
            </div>
            <div class="card-body">
                <h4 class="card-title"><%= project.name %></h4>
                <p class="card-text"><%= project.description %></p>
            </div>
            <%- include ./partials/backlog%>
            <%- include ./partials/sprints%>
            <br>
            <button class="btn btn-dark" onclick="confirmDeletePopup()">Supprimer le projet</button>

        </div>
    </div>